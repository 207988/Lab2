<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="it.polito.tdp.spellchecker.controller.SpellCheckerController">
   <top>
      <Label text="Lab2_SpellChecker" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="20.0">
               <children>
                  <Label text="Choose the language: " />
                  <ComboBox fx:id="cmbLang" />
               </children>
            </HBox>
            <TextArea fx:id="txtIn">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextArea>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button fx:id="btnSpell" mnemonicParsing="false" onAction="#doSpellCheck" text="Spell Check" />
               </children>
            </HBox>
            <TextArea fx:id="txtOut" />
            <HBox alignment="TOP_RIGHT" spacing="20.0">
               <children>
                  <Label fx:id="txtErr" text="Your text contains errors!">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#doClearText" text="Clear Text" />
               </children>
            </HBox>
            <Label fx:id="txtTime" text="Spell Check completed in ..." />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
